<div class="container">
  <h1>Edit <%= @book.title %></h1>
  <%= simple_form_for @book do |f| %>
    <%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :summary %>
    <%= f.input :notes %>
    <%= f.input :rating, error: 'Has to be between 0 - 10' %>
    
    <%= f.button :submit, class: "btn btn-secondary" %>
  <% end %>
</div>